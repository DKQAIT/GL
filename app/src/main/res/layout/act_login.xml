<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:background="@drawable/dlg_sharp"
        android:hint="用户名"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColorHint="#999999"
        android:textColor="#333333"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
         />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/dlg_sharp"
        android:hint="密码"
        android:textColorHint="#999999"
        android:textColor="#333333"
        android:textSize="15sp"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/et_phone"
        />

    <TextView
        android:id="@+id/login_btns"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/sharp_btn_gradient"
        android:onClick="onViewClick"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        android:text="登　录"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="onViewClick"
        android:text="忘记密码"
        android:textSize="14sp"
        android:textColor="#6466D7"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/login_btns"
        app:layout_constraintTop_toBottomOf="@+id/login_btns" />

    <TextView
        android:id="@+id/tv_register"
        android:onClick="onViewClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="注册"
        android:textSize="14sp"
        android:layout_marginRight="15dp"
        android:visibility="gone"
        android:textColor="#6466D7"
        app:layout_constraintTop_toBottomOf="@+id/login_btns"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/login_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:onClick="onViewClick"
        android:text="短信登录"
        android:textSize="14sp"
        android:textColor="#6466D7"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btns" />


</android.support.constraint.ConstraintLayout>