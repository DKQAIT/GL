<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/l_zong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/t_name"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="姓名：董先生"
                android:textSize="15sp"
                android:gravity="center|left"

                />

            <TextView
                android:id="@+id/t_phone"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="手机号：188****6666"
                android:gravity="center|left"
                android:textSize="15sp"

                />


            <TextView
                android:id="@+id/t_dz"
                android:layout_marginTop="5dp"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="地址：北京市朝阳区"
                android:gravity="center|left"
                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/t_time"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="时间：2019-05-04 19:00"
                android:gravity="center|left"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/t_times"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="审核时间：2019-05-04 19:00"
                android:gravity="center|left"
                android:visibility="visible"
                android:textSize="15sp"

                />




        </LinearLayout>

        <View
            android:layout_width="0dp"

            android:layout_height="110dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            >


            <TextView
                android:id="@+id/ckxq"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="查看详情"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/sharp_btn_hong"

                />
            <TextView
                android:id="@+id/bz"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="备注"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/sharp_btn_hong"

                />


        </LinearLayout>





    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/divider_gray"/>




</android.support.constraint.ConstraintLayout>