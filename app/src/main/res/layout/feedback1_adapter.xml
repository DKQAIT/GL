<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/l_zong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >

            <TextView
                android:id="@+id/t_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="反馈手机号：18866665555"
                android:gravity="center"
                android:textSize="15sp"

                />


            <TextView
                android:id="@+id/t_icon"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="描述：这是反馈的问题内容。"
                android:textSize="17sp"
                android:maxLength="22"

                />
            <TextView
                android:id="@+id/t_names"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="反馈人：董先生"
                android:gravity="center"
                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/t_time"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="反馈时间：2018-12-12 09:09:30"
                android:gravity="center"
                android:textSize="15sp"

                />


        </LinearLayout>

        <View
            android:layout_width="0dp"

            android:layout_height="110dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/tgrz"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="查看详情"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/sharp_btn_gradient"

                />

            <TextView
                android:id="@+id/jjrz"
                android:layout_marginTop="10dp"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="拒绝认证"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/sharp_btn_hong"
                />
        </LinearLayout>
    </LinearLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/divider_gray"/>




</android.support.constraint.ConstraintLayout>