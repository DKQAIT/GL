<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/l_zong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:id="@+id/left"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="12.5dp"
            android:src="@mipmap/ic_back"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="任务详情"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

    </RelativeLayout>

    <com.jtjt.qtgl.ui.login.view.RecyclerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <TextView
        android:id="@+id/t_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="任务名称：设备名字"
        android:visibility="visible"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/t_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:text="任务详情："
        android:textSize="15sp"
        />

        <TextView
            android:id="@+id/t_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="发布人：董先生"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/t_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="发布时间："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/t_n1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="处理人："
            android:textSize="15sp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/t_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="被处理时间："
            android:visibility="gone"
            android:textSize="15sp"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            >
        <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="任务处理回复列表"

            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            />

        <TextView
            android:id="@+id/t_xgsb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sharp_btn_hong"
            android:text="处理任务"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:descendantFocusability="blocksDescendants"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>


    </LinearLayout>
    </com.jtjt.qtgl.ui.login.view.RecyclerScrollView>

</LinearLayout>